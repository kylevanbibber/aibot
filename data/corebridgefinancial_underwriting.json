    },
    "risk_classes": {
      "description": "SimpliNow Legacy offers two final-expense whole life death-benefit designs (Graded and Level) plus the automatic Decline outcome. Applicants are routed based on their medical profile and build-chart placement.",
      "classes": [
        {
          "name": "SimpliNow Legacy Max (Level Death Benefit)",
          "criteria": [
            "Height/weight within the "Min. – Max." columns of the Legacy Max build chart (page 8)",
            "Medical history yields a "Level" decision for all listed conditions (page 4–7)",
            "Age 50–80, can be up to $25,000 face amount (inferred industry standard)"
          ]
        },
        {
          "name": "SimpliNow Legacy (Graded Death Benefit)",
          "criteria": [
            "Height/weight within the "Min. – Max." columns of the Legacy Graded build chart (page 8)",
            "Medical history yields a "Graded" decision for all listed conditions (page 4–7)",
            "Age 50–80, face amount up to $25,000 (inferred)"
          ]
        },
        {
          "name": "Decline",
          "criteria": [
            "Any height/weight outside defined ranges on page 8 → Decline",
            "Any medical condition marked "Decline" on pages 4–7 → Decline"
          ]
        }
      ]
    },
    "tobacco_guidelines": {
      "description": "Tobacco or nicotine use affects certain cardiac and pulmonary conditions by moving a Level outcome to Graded or, in some cases, Decline. For example, angina or coronary procedures within 24 months combined with tobacco use automatically become "Graded" rather than "Level." No separate nicotine-only grid is provided; tobacco status is embedded in each condition's guideline (pages 4–7).",
      "classifications": [
        {
          "type": "Non-Tobacco",
          "classification": "May qualify for Level outcomes on certain cardiac conditions (e.g., angina, MI, CAD procedures) if other criteria are met"
        },
        {
          "type": "Tobacco (any nicotine in last 12 months)",
          "classification": "Single Tobacco use combined with certain conditions (angina, MI, CAD procedures) → Graded (instead of Level); some COPD or chronic bronchitis with tobacco → Decline"
        }
      ]
    },
    "financial_underwriting": {
      "description": "No income verification or financial multiples are required—underwriting relies on simplified issue rules. Premium is collected via bank draft or check at issuance.",
      "income_multiples": []
    },
    "special_considerations": {
      "description": "A non-exhaustive list of prescription medications that automatically trigger a Decline decision is provided (page 10–11). Foreign nationals or non-resident aliens are not eligible for SimpliNow Legacy. Combinations of medications and comorbidities may also impact underwriting beyond the examples given.",
      "factors": [
        {
          "factor": "Prescription Medications Triggering Decline",
          "guideline": [
            "Antiplatelet/Anticoagulant for CAD (e.g., Plavix, Brilinta, Effient) plus diabetes or tobacco or stroke → Decline",
            "Chronic angina medications (Ranexa, Isosorbide, Nitrostat) with history of stroke or heart failure → Decline",
            "COPD/Chronic Bronchitis meds (Daliresp, Breo Ellipta) plus tobacco use → Decline",
            "Heart failure meds (Entresto, BiDil, Corlanor, Inspra) → Decline",
            "Serious pain/opioid dependence (Marinol, Dronabinol, long-term opioids) → Decline",
            "Parkinson's delusions/hallucinations med (Nuplazid) → Decline",
            "Pulmonary hypertension meds (Tyvaso, Remodulin, Uptravi, Ventavis, Flolan, Vetetr) → Decline",
            "Pulmonary fibrosis meds (Ofev, Esbriet) → Decline",
            "Memory loss/dementia meds (Aricept, Namenda, etc.) → Decline",
            "Opioid dependence meds (Suboxone) → Decline",
            "Pain meds (Duragesic, MS Contin, Morphine, Methadone, etc.) → Decline",
            "Alcohol abuse meds (Antabuse, Campral, Vivitrol) → Decline",
            "Prostate cancer drugs in males (Lupron, Depo-Provera) → Decline",
            "CKD complication drugs (Calcitriol, Sevelamer, Renvela, Zemplar) → Decline",
            "Cachexia drugs (Megestrol) → Decline"
          ]
        },
        {
          "factor": "Foreign Nationals / Non-Resident Aliens",
          "guideline": "Any proposed insured, owner, or payor who is not a U.S. citizen or green card holder is not eligible for SimpliNow Legacy"
        }
      ]
    }
